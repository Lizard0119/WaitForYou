<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
  mybatis的第二种事件方式
    xml + 接口的方式
      特点：xml中的namespace必须为接口的全路径
        xml中的每个节点的id必须为接口的方法名

-->
<mapper namespace="cn.lcd.ResumeDao">
    <select id="findResuemByUserName" resultType="tb_resume">
        select * from tb_user u
            inner join tb_user_resume b on u.id = b.uid
            inner join tb_resme y on y.id = b.uid
            where u.uid = #{uid}
    </select>
</mapper>